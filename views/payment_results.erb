<h1>
  Payment Results
</h1>

<body>
<dl>
  <dt>
    APR
  </dt>
  <dd>
   <%= @apr_num.to_fs(:percentage, {:precision => 4}) %>
  </dd>

  <dt>
    Number of years
  </dt>
  <dd>
    <%= @year_num %>
  </dd>

<dt>
    Principal
  </dt>
  <dd>
    <%= @principal_num.to_fs(:currency) %>
  </dd>

  <dt>
    Payment
  </dt>
  <dd>
    <%= @the_result%>
  </dd>
</dl>

<a href="/payment/new">Calculate another payment</a>
</body>
